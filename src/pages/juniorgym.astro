---
import ProgramPage from "../components/ProgramPage.astro";

const title = "JuniorGym";
const blurb = "Structured gymnastics for our youngest athletes: movement, coordination and fun in a safe, supportive environment.";
const bookingUrl = "https://YOUR-BOOKING-LINK/juniorgym";
const trialUrl = "https://YOUR-BOOKING-LINK/free-trial";
const heroImage = "/images/hero-juniorgym.jpg"; // optional; remove if not available
const levels = [
  { name: "JuniorGym 2–3", age: "Ages 2–3", description: "Parent-assisted exploratory gymnastics building balance and confidence.", icon: "/images/levels/junior-2-3.svg" },
  { name: "JuniorGym 3–4", age: "Ages 3–4", description: "Independent class introducing shapes, landings and safe movement." },
  { name: "JuniorGym 4–5", age: "Ages 4–5", description: "Pre-school fundamentals and readiness for school-age classes." }
];
---

<ProgramPage {title} {blurb} {levels} {bookingUrl} {trialUrl} heroImage={heroImage} />
