    border-radius: 1rem;
    margin-bottom: 3rem;
  }

  .no-policies-icon {
    color: var(--text-light);
    margin-bottom: 1rem;
  }

  .no-policies h3 {
    color: var(--text-color);
    margin-bottom: 1rem;
    font-size: 1.5rem;
  }

  .no-policies p {
    color: var(--text-light);
    margin-bottom: 1rem;
  }

