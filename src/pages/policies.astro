---
import Layout from '../layouts/Layout.astro';
import { readdirSync } from 'fs';
import path from 'path';

// Read PDF files from public/policies directory
let policyFiles: string[] = [];
try {
  const policiesDir = path.join(process.cwd(), 'public', 'policies');
  const files = readdirSync(policiesDir);
  policyFiles = files.filter(file => file.toLowerCase().endsWith('.pdf'));
} catch (error) {
  // Directory doesn't exist yet, that's okay
  console.log('Policies directory not found, will be created when PDFs are added');
}

// Helper function to format filename for display
function formatPolicyName(filename: string): string {
  return filename
    .replace(/\.pdf$/i, '')
    .replace(/[-_]/g, ' ')
    .replace(/\b\w/g, l => l.toUpperCase());
}
---

<Layout title="Policies" description="Important policies and documents for Trident Gymnastics members and participants.">
  <main>
    <section class="page-header">
      <div class="container">
        <h1>Policies & Documents</h1>
        <p>Important information for all members and participants</p>
      </div>
    </section>

    <section class="content">
      <div class="container">
        <div class="policies-intro">
          <h2>Important Documents</h2>
          <p>Please review these important policies and documents. All participants and their families should be familiar with our guidelines and procedures.</p>
        </div>

        {policyFiles.length > 0 ? (
          <div class="policies-grid">
            {policyFiles.map((file) => (
              <div class="policy-card">
                <div class="policy-icon">
                  <svg width="48" height="48" viewBox="0 0 24 24" fill="currentColor">
                    <path d="M14,2H6A2,2 0 0,0 4,4V20A2,2 0 0,0 6,22H18A2,2 0 0,0 20,20V8L14,2M18,20H6V4H13V9H18V20Z" />
                  </svg>
                </div>
                <div class="policy-content">
                  <h3>{formatPolicyName(file)}</h3>
                  <p class="policy-filename">{file}</p>
                  <a 
                    href={`/policies/${file}`} 
                    class="download-btn"
                    target="_blank"
                    rel="noopener noreferrer"
                  >
                    <svg width="16" height="16" viewBox="0 0 24 24" fill="currentColor">
                      <path d="M5,20H19V18H5M19,9H15V3H9V9H5L12,16L19,9Z" />
                    </svg>
                    Download PDF
                  </a>
                </div>
              </div>
            ))}
          </div>
        ) : (
          <div class="no-policies">
            <div class="no-policies-icon">
              <svg width="64" height="64" viewBox="0 0 24 24" fill="currentColor">
                <path d="M14,2H6A2,2 0 0,0 4,4V20A2,2 0 0,0 6,22H18A2,2 0 0,0 20,20V8L14,2M18,20H6V4H13V9H18V20Z" />
              </svg>
            </div>
            <h3>No Policies Available</h3>
            <p>Policy documents will appear here once they are added to the /public/policies/ directory.</p>
            <p>To add policies:</p>
            <ol>
              <li>Create a <code>/public/policies/</code> directory</li>
              <li>Add PDF files to that directory</li>
              <li>Rebuild the site to see them listed here</li>
            </ol>
          </div>
        )}

        <div class="important-info">
          <h2>Important Information</h2>
          <div class="info-grid">
            <div class="info-card">
              <h3>Safety First</h3>
              <p>All participants must follow our safety guidelines. Please review our safety policies and ensure you understand the rules before participating in any activities.</p>
            </div>
            
            <div class="info-card">
              <h3>Membership Terms</h3>
              <p>Our membership terms outline the rights and responsibilities of all members. Please review these carefully before signing up for classes or programs.</p>
            </div>
            
            <div class="info-card">
              <h3>Privacy Policy</h3>
              <p>We are committed to protecting your privacy. Our privacy policy explains how we collect, use, and protect your personal information.</p>
            </div>
            
            <div class="info-card">
              <h3>Refund Policy</h3>
              <p>Please review our refund and cancellation policies before making any payments. These policies apply to all programs and services.</p>
            </div>
          </div>
        </div>

        <div class="cta-section">
          <h2>Questions About Our Policies?</h2>
          <p>If you have any questions about our policies or need clarification on any terms, please don't hesitate to contact us.</p>
          <a href="/contact" class="btn btn-primary">Contact Us</a>
        </div>
      </div>
    </section>
  </main>
</Layout>

<style>
  .page-header {
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    color: white;
    padding: 3rem 0;
    text-align: center;
  }

