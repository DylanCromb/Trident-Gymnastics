    text-align: left;
    max-width: 400px;
    margin: 0 auto;
    color: var(--text-light);
  }

  .no-policies code {
    background: var(--border-color);
    padding: 0.25rem 0.5rem;
    border-radius: 0.25rem;
    font-family: monospace;
  }

  .important-info {
    margin-bottom: 3rem;
  }

  .important-info h2 {
    text-align: center;
    font-size: 2rem;
    margin-bottom: 2rem;
    color: var(--text-color);
  }

  .info-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 2rem;
  }

