  }

  .btn {
    display: inline-block;
    padding: 0.75rem 1.5rem;
    border-radius: 0.5rem;
    text-decoration: none;
    font-weight: 600;
    transition: all 0.3s ease;
  }

  .btn-primary {
    background: var(--accent-color);
    color: white;
  }

  .btn-primary:hover {
    background: #ff5252;
    transform: translateY(-2px);
  }

  @media (max-width: 768px) {
    .policy-card {
      flex-direction: column;
      text-align: center;
    }

    .policy-icon {
      margin-bottom: 1rem;
    }
  }
</style>
