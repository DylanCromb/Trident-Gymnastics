---
// src/pages/parties.astro
import Layout from "../layouts/Layout.astro";
import "../styles/parties.css";

const bookingUrl = "https://trident-gymnastics.customer-portal.com/parties"; // Customer Portal booking link
const inviteHref = "/files/party-invitation.pdf";    // TODO: place this file in /public/files/
---

<Layout title="Birthday Parties" description="Celebrate at Trident with gymnastics-based parties.">
  <!-- HERO -->
  <section class="party-hero">
    <div class="container">
      <h1>Birthday Parties</h1>
      <p class="lead">
        Party with us! Qualified coaches, movement games and a safe facility for an unforgettable celebration.
      </p>
      <a class="btn btn-accent" href={bookingUrl} target="_blank" rel="noopener">Book Now</a>
    </div>
  </section>

  <!-- THEMES -->
  <section class="party-types" id="themes">
    <div class="container">
      <h2>Party Themes</h2>
      <div class="types-grid">
        <article class="card">
          <h3>OpenGym Party</h3>
          <p>Explore the gym at your own pace with coach-led games and supervised free time.</p>
        </article>
        <article class="card">
          <h3>Gymnastics Party</h3>
          <p>Vault, bars, beam and floor with fun skill circuits, stations and team games.</p>
        </article>
        <article class="card">
          <h3>UrbanGym Party</h3>
          <p>Obstacle flow, climbs and vaults with a parkour-inspired twist—safe, coached and epic.</p>
        </article>
      </div>
    </div>
  </section>

  <!-- FORMAT / TIMES / PRICING -->
  <section class="party-details" id="details">
    <div class="container">
      <h2>Format, Times & Pricing</h2>
      <ul class="details-list">
        <li>Session length: 2 hours (venue access total ~2.5 hours)</li>
        <li>Setup/pack-up: 15 minutes either side</li>
        <li>Typical slot: Saturdays 2:00pm – 4:00pm (subject to availability)</li>
        <li>1–10 participants: $350</li>
        <li>11–20 participants: $450</li>
        <li>21–30 participants: $550</li>
        <li>31–40 participants: $650</li>
        <li>$50 non-refundable deposit required at booking</li>
        <li>Balance due by COB Monday of party week</li>
      </ul>

      <div class="cta-row">
        <a class="btn btn-accent" href={bookingUrl} target="_blank" rel="noopener">Book Now</a>
      </div>
    </div>
  </section>

  <!-- EXTRAS & INVITATION -->
  <section class="party-extras" id="extras">
    <div class="container">
      <h2>Extras & Notes</h2>
      <ul class="notes-list">
        <li>Food, decorations & cutlery: BYO (tables & chairs provided)</li>
        <li>Limited kitchen access available</li>
        <li>
          Invitation template:
          <a href={inviteHref} download>Download party invitation (PDF)</a>
        </li>
      </ul>
    </div>
  </section>
</Layout>