---
import Layout from '../layouts/Layout.astro';
import { siteConfig } from '../config/site';
---

<Layout title="Contact" description="Get in touch with Trident Gymnastics. Contact us for classes, parties, or any questions.">
  <main>
    <section class="page-header">
      <div class="container">
        <h1>Contact Us</h1>
        <p>Get in touch with Trident Gymnastics</p>
      </div>
    </section>

    <section class="content">
      <div class="container">
        <div class="contact-grid">
          <div class="contact-card">
            <h3>Get in Touch</h3>
            <div class="contact-methods">
              <div class="contact-method">
                <h4>Phone</h4>
                <p>Call us during business hours</p>
                <a href={`tel:${siteConfig.phone}`} class="contact-link">
                  {siteConfig.phone}
                </a>
              </div>
              
              <div class="contact-method">
                <h4>WhatsApp</h4>
                <p>Quick questions and bookings</p>
                <a 
                  href={`https://wa.me/${siteConfig.phone}?text=${siteConfig.whatsappMessage}`}
                  class="whatsapp-link"
                  target="_blank"
                  rel="noopener noreferrer"
                >
                  <svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
                    <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893A11.821 11.821 0 0020.885 3.488"/>
                  </svg>
                  Message us on WhatsApp
                </a>
              </div>
              
              <div class="contact-method">
                <h4>Email</h4>
                <p>General inquiries</p>
                <a href="mailto:info@tridentgymnastics.com" class="contact-link">
                  info@tridentgymnastics.com
                </a>
              </div>
            </div>
          </div>
          
          <div class="contact-card">
            <h3>Visit Us</h3>
            <div class="address">
              <h4>Address</h4>
              <p>
                123 Gymnastics Way<br>
                Sports City, SC 12345<br>
                Australia
              </p>
            </div>
            
            <div class="hours">
              <h4>Business Hours</h4>
              <ul>
                <li><strong>Monday - Friday:</strong> 8:00 AM - 8:00 PM</li>
                <li><strong>Saturday:</strong> 9:00 AM - 6:00 PM</li>
                <li><strong>Sunday:</strong> 10:00 AM - 4:00 PM</li>
              </ul>
            </div>
          </div>
          
          <div class="contact-card">
            <h3>Quick Links</h3>
            <div class="quick-links">
              <a href="/classes" class="quick-link">View Classes</a>
              <a href="/playgym" class="quick-link">Playgym Info</a>
              <a href="/opengym" class="quick-link">Open Gym</a>
              <a href="/parties" class="quick-link">Book a Party</a>
              <a href="/school-holidays" class="quick-link">Holiday Programs</a>
              <a href="/policies" class="quick-link">Policies</a>
            </div>
          </div>
        </div>
        
        <div class="cta-section">
          <h2>Ready to Get Started?</h2>
          <p>Whether you're interested in classes, parties, or just want to learn more about what we offer, we're here to help!</p>
          <div class="cta-buttons">
            <a href="/classes" class="btn btn-primary">View Classes</a>
            <a 
              href={`https://wa.me/${siteConfig.phone}?text=${siteConfig.whatsappMessage}`}
              class="btn btn-secondary"
              target="_blank"
              rel="noopener noreferrer"
            >
              WhatsApp Us
            </a>
          </div>
        </div>
      </div>
    </section>
  </main>
</Layout>

<style>
  .page-header {
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    color: white;
    padding: 3rem 0;
    text-align: center;
  }

  .page-header h1 {
    font-size: 2.5rem;
    margin-bottom: 1rem;
  }

  .content {
    padding: 4rem 0;
  }

  .contact-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 2rem;
    margin-bottom: 3rem;
  }

  .contact-card {
    background: white;
    padding: 2rem;
    border-radius: 1rem;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    border: 1px solid var(--border-color);
  }

  .contact-card h3 {
    color: var(--primary-color);
    margin-bottom: 1.5rem;
    font-size: 1.5rem;
  }

  .contact-methods {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
  }

  .contact-method h4 {
    color: var(--text-color);
    margin-bottom: 0.5rem;
    font-size: 1.1rem;
  }

  .contact-method p {
    color: var(--text-light);
    margin-bottom: 0.5rem;
    font-size: 0.9rem;
  }

  .contact-link {
    color: var(--primary-color);
    text-decoration: none;
    font-weight: 600;
  }

  .contact-link:hover {
    text-decoration: underline;
  }

  .whatsapp-link {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    background: #25d366;
    color: white;
    padding: 0.5rem 1rem;
    border-radius: 0.5rem;
    text-decoration: none;
    font-weight: 600;
    transition: all 0.3s ease;
  }

  .whatsapp-link:hover {
    background: #128c7e;
    transform: translateY(-2px);
  }

  .address,
  .hours {
    margin-bottom: 1.5rem;
  }

  .address h4,
  .hours h4 {
    color: var(--text-color);
    margin-bottom: 0.5rem;
    font-size: 1.1rem;
  }

  .hours ul {
    list-style: none;
  }

  .hours li {
    padding: 0.25rem 0;
    color: var(--text-light);
  }

  .quick-links {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(150px, 1fr));
    gap: 1rem;
  }

  .quick-link {
    display: block;
    padding: 0.75rem 1rem;
    background: var(--bg-light);
    color: var(--text-color);
    text-decoration: none;
    border-radius: 0.5rem;
    text-align: center;
    font-weight: 500;
    transition: all 0.3s ease;
  }

  .quick-link:hover {
    background: var(--primary-color);
    color: white;
    transform: translateY(-2px);
  }

  .cta-section {
    text-align: center;
    background: var(--bg-light);
    padding: 3rem;
    border-radius: 1rem;
  }

  .cta-section h2 {
    margin-bottom: 1rem;
    color: var(--text-color);
  }

  .cta-section p {
    margin-bottom: 2rem;
    color: var(--text-light);
  }

  .cta-buttons {
    display: flex;
    gap: 1rem;
    justify-content: center;
    flex-wrap: wrap;
  }

  .btn {
    display: inline-block;
    padding: 0.75rem 1.5rem;
    border-radius: 0.5rem;
    text-decoration: none;
    font-weight: 600;
    transition: all 0.3s ease;
  }

  .btn-primary {
    background: var(--accent-color);
    color: white;
  }

  .btn-primary:hover {
    background: #ff5252;
    transform: translateY(-2px);
  }

  .btn-secondary {
    background: #25d366;
    color: white;
  }

  .btn-secondary:hover {
    background: #128c7e;
    transform: translateY(-2px);
  }
</style>
