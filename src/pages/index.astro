---
import Layout from '../layouts/Layout.astro';
import { siteConfig } from '../config/site';
import { readFileSync } from 'fs';
import { parse } from 'yaml';
import path from 'path';

// Load assets from CMS
let assets = { hero_image: null };
try {
  const assetsPath = path.join(process.cwd(), 'content', 'assets.yml');
  const assetsFile = readFileSync(assetsPath, 'utf8');
  assets = parse(assetsFile);
} catch (error) {
  // Assets file doesn't exist or is empty, use defaults
}

const heroImageUrl = assets.hero_image ? `/uploads/${assets.hero_image}` : null;
---

<Layout title="Home" description={siteConfig.siteDescription}>
  <section class="hero">
    {heroImageUrl && (
      <div class="hero-image">
        <img src={heroImageUrl} alt="Trident Gymnastics" />
      </div>
    )}
    <div class="container">
      <h1>Welcome to Trident Gymnastics</h1>
      <p>Premier gymnastics training facility offering classes, playgym, open gym, and parties for all ages.</p>
      <div class="cta-buttons">
        <a href="/classes" class="btn btn-accent">View Classes</a>
        <a href="/contact" class="btn btn-secondary">Contact Us</a>
      </div>
    </div>
  </section>

  <section class="features">
    <div class="container">
      <h2>What We Offer</h2>
      <div class="feature-grid">
        <div class="card feature-card">
          <h3>Classes</h3>
          <p>Structured gymnastics classes for all skill levels and ages.</p>
          <a href="/classes" class="btn">Learn More</a>
        </div>
        <div class="card feature-card">
          <h3>Playgym</h3>
          <p>Fun, unstructured play time in our safe gymnastics environment.</p>
          <a href="/playgym" class="btn">Learn More</a>
        </div>
        <div class="card feature-card">
          <h3>Open Gym</h3>
          <p>Practice your skills during our open gym sessions.</p>
          <a href="/opengym" class="btn">Learn More</a>
        </div>
        <div class="card feature-card">
          <h3>Parties</h3>
          <p>Celebrate your special day with a gymnastics-themed party.</p>
          <a href="/parties" class="btn">Learn More</a>
        </div>
      </div>
    </div>
  </section>
</Layout>

<style>
  .hero {
    background: linear-gradient(135deg, var(--color-primary) 0%, var(--color-secondary) 100%);
    color: var(--color-white);
    padding: 4rem 0;
    text-align: center;
    position: relative;
    overflow: hidden;
  }

  .hero-image {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    z-index: 1;
  }

  .hero-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    opacity: 0.3;
  }

  .hero .container {
    position: relative;
    z-index: 2;
  }

  .hero h1 {
    font-size: 3rem;
    margin-bottom: 1rem;
    font-weight: 700;
    color: var(--color-white);
  }

  .hero p {
    font-size: 1.25rem;
    margin-bottom: 2rem;
    opacity: 0.9;
    color: var(--color-white);
  }

  .cta-buttons {
    display: flex;
    gap: 1rem;
    justify-content: center;
    flex-wrap: wrap;
  }

  .btn-secondary {
    background: transparent;
    color: var(--color-white);
    border: 2px solid var(--color-white);
  }

  .btn-secondary:hover {
    background: var(--color-white);
    color: var(--color-primary);
  }

  .features {
    padding: 4rem 0;
    background: #f7f9fc;
  }

  .features h2 {
    text-align: center;
    font-size: 2.5rem;
    margin-bottom: 3rem;
    color: var(--color-secondary);
  }

  .feature-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 2rem;
  }

  .feature-card {
    padding: 2rem;
    text-align: center;
    transition: transform 0.3s ease;
  }

  .feature-card:hover {
    transform: translateY(-5px);
  }

  .feature-card h3 {
    font-size: 1.5rem;
    margin-bottom: 1rem;
    color: var(--color-secondary);
  }

  .feature-card p {
    margin-bottom: 1.5rem;
    color: var(--text-muted);
    line-height: 1.6;
  }

  @media (max-width: 768px) {
    .hero h1 {
      font-size: 2rem;
    }
    
    .hero p {
      font-size: 1rem;
    }
    
    .cta-buttons {
      flex-direction: column;
      align-items: center;
    }
    
    .btn {
      width: 200px;
    }
  }
</style>
