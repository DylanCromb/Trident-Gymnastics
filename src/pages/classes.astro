---
import Layout from '../layouts/Layout.astro';
import { readFileSync } from 'fs';
import path from 'path';

// Load classes data
const classesPath = path.join(process.cwd(), 'content', 'classes', 'classes.json');
const classesData = JSON.parse(readFileSync(classesPath, 'utf8'));
---

<Layout title="Our Classes" description="Discover our comprehensive gymnastics programs: JuniorGym, EduGym, UrbanGym, and AGC competitive training.">
  <section class="hero section">
    <div class="container">
      <h1>Our Classes üèÖ</h1>
      <p class="lead">From toddlers to competitive athletes, we offer structured gymnastics programs designed to build strength, confidence, and skill at every level.</p>
      <div class="cta-buttons">
        <a href="https://YOUR-BOOKING-LINK/free-trial" class="btn btn-accent" target="_blank" rel="noopener">Book Free Trial ‚≠ê</a>
        <a href="/contact" class="btn btn-secondary">Contact Us</a>
      </div>
    </div>
  </section>

  <section class="classes-overview section section-band">
    <div class="container">
      <div class="class-grid">
        {classesData.map((program) => (
          <a href={`/${program.slug}`} class="card feature-card card-accent">
            <div class="class-content">
              <h3>{program.title}</h3>
              <p class="class-blurb">{program.blurb}</p>
              <span class="learn-more">Learn more ‚Üí</span>
            </div>
          </a>
        ))}
      </div>
      
      <div class="cta-section">
        <h2>Ready to Get Started?</h2>
        <p>Book a free trial class to find the perfect program for your child.</p>
        <a href="https://YOUR-BOOKING-LINK/free-trial" class="btn btn-accent" target="_blank" rel="noopener">Book Free Trial</a>
      </div>
    </div>
  </section>
</Layout>

<style>
  .class-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 2rem;
    margin-bottom: 3rem;
  }

  .class-content {
    text-align: center;
  }

  .class-content h3 {
    margin-bottom: 1rem;
    color: var(--dark-navy);
  }

  .class-blurb {
    margin-bottom: 1rem;
    color: var(--text-muted);
    line-height: 1.6;
  }

  .learn-more {
    color: var(--primary-blue);
    font-weight: 600;
    text-decoration: none;
  }

  .cta-section {
    text-align: center;
    padding: 3rem 0;
    background: var(--light-bg);
    border-radius: var(--radius);
  }

  .cta-section h2 {
    margin-bottom: 1rem;
    color: var(--dark-navy);
  }

  .cta-section p {
    margin-bottom: 2rem;
    color: var(--text-muted);
  }

  .cta-buttons {
    display: flex;
    gap: 1rem;
    justify-content: center;
    flex-wrap: wrap;
    margin-top: 2rem;
  }

  @media (max-width: 768px) {
    .cta-buttons {
      flex-direction: column;
      align-items: center;
    }
  }
</style>