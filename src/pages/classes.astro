---
import Layout from '../layouts/Layout.astro';
import { readFileSync } from 'fs';
import path from 'path';

// Load classes data
const classesPath = path.join(process.cwd(), 'content', 'classes', 'classes.json');
const classesData = JSON.parse(readFileSync(classesPath, 'utf8'));
---

<Layout title="Our Classes" description="Discover our comprehensive gymnastics programs: JuniorGym, EduGym, UrbanGym, and AGC competitive training.">
  <section class="classes-hero">
    <div class="container">
      <h1>Our Classes</h1>
      <p class="lead">From toddlers to competitive athletes, we offer structured gymnastics programs designed to build strength, confidence, and skill at every level.</p>
    </div>
  </section>

  <section class="classes-overview">
    <div class="container">
      <div class="class-grid">
        {classesData.map((program) => (
          <a href={`/${program.slug}`} class="card class-card">
            <div class="class-content">
              <h3>{program.title}</h3>
              <p class="class-blurb">{program.blurb}</p>
              <span class="learn-more">Learn more â†’</span>
            </div>
          </a>
        ))}
      </div>
      
      <div class="cta-section">
        <h2>Ready to Get Started?</h2>
        <p>Book a free trial class to find the perfect program for your child.</p>
        <a href="https://YOUR-BOOKING-LINK/free-trial" class="btn btn-accent" target="_blank" rel="noopener">Book Free Trial</a>
      </div>
    </div>
  </section>
</Layout>

<style>
  .classes-hero {
    background: linear-gradient(135deg, var(--color-primary) 0%, var(--color-secondary) 100%);
    color: var(--color-white);
    padding: 4rem 0;
    text-align: center;
  }

  .classes-hero h1 {
    font-size: 2.5rem;
    margin-bottom: 1rem;
    color: var(--color-white);
  }

  .classes-hero .lead {
    font-size: 1.2rem;
    opacity: 0.9;
    max-width: 800px;
    margin: 0 auto;
    color: var(--color-white);
  }

  .classes-overview {
    padding: 4rem 0;
  }

  .class-grid {
    display: grid;
    grid-template-columns: repeat(4, minmax(0, 1fr));
    gap: 20px;
    margin-bottom: 3rem;
  }

  .class-card {
    padding: 20px;
    text-decoration: none;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
    display: block;
  }

  .class-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 8px 15px rgba(0, 0, 0, 0.15);
  }

  .class-content h3 {
    color: var(--color-secondary);
    margin-bottom: 1rem;
    font-size: 1.3rem;
  }

  .class-blurb {
    color: var(--text-muted);
    margin-bottom: 1rem;
    line-height: 1.5;
  }

  .learn-more {
    color: var(--color-primary);
    font-weight: 600;
    font-size: 0.9rem;
  }

  .cta-section {
    text-align: center;
    padding: 2rem 0;
    background: var(--bg-light);
    border-radius: var(--radius);
  }

  .cta-section h2 {
    margin-bottom: 1rem;
    color: var(--color-secondary);
  }

  .cta-section p {
    margin-bottom: 1.5rem;
    color: var(--text-muted);
  }

  @media (max-width: 900px) {
    .class-grid {
      grid-template-columns: repeat(2, 1fr);
    }
    
    .classes-hero h1 {
      font-size: 2rem;
    }
    
    .classes-hero .lead {
      font-size: 1rem;
    }
  }

  @media (max-width: 600px) {
    .class-grid {
      grid-template-columns: 1fr;
    }
    
    .classes-hero {
      padding: 3rem 0;
    }
    
    .classes-overview {
      padding: 3rem 0;
    }
  }
</style>